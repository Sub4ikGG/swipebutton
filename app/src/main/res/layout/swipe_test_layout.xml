<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A58383">

    <ru.chatan.swipebutton.SwipeButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:swipeThumbColor="@color/light_blue"
        app:swipeDrawable="@drawable/swipe_arrow"
        app:swipeFontFamily="@font/rubik_medium"
        app:swipeText="Swipe me!"
        app:swipeTextColor="@color/black"
        app:swipeTextSize="16sp" />
</androidx.constraintlayout.widget.ConstraintLayout>